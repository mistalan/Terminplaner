<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TerminplanerMaui.ViewModels"
             xmlns:models="clr-namespace:TerminplanerMaui.Models"
             xmlns:converters="clr-namespace:TerminplanerMaui.Converters"
             x:Class="TerminplanerMaui.Pages.MainPage"
             x:DataType="vm:MainViewModel"
             Title="Terminplaner">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:IsNotNullConverter x:Key="IsNotNullConverter"/>
            <converters:DaysToShowConverter x:Key="DaysToShowConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <Grid RowDefinitions="Auto,Auto,Auto,*" Padding="20">
        
        <!-- Date Navigation -->
        <Frame Grid.Row="0" 
               BackgroundColor="#667eea"
               Padding="15"
               Margin="0,0,0,10"
               CornerRadius="8">
            <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                <!-- Previous Day Button -->
                <Button Grid.Column="0"
                        Text="â—€"
                        Command="{Binding GoToPreviousDayCommand}"
                        BackgroundColor="#5568d3"
                        TextColor="White"
                        WidthRequest="50"
                        HeightRequest="40"
                        CornerRadius="5"
                        Padding="0"/>
                
                <!-- Current Date Display -->
                <Label Grid.Column="1"
                       Text="{Binding CurrentDateDisplay}"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
                
                <!-- Today Button -->
                <Button Grid.Column="2"
                        Text="Heute"
                        Command="{Binding GoToTodayCommand}"
                        BackgroundColor="#5568d3"
                        TextColor="White"
                        WidthRequest="70"
                        HeightRequest="40"
                        CornerRadius="5"
                        Padding="0"
                        Margin="0,0,10,0"/>
                
                <!-- Next Day Button -->
                <Button Grid.Column="3"
                        Text="â–¶"
                        Command="{Binding GoToNextDayCommand}"
                        BackgroundColor="#5568d3"
                        TextColor="White"
                        WidthRequest="50"
                        HeightRequest="40"
                        CornerRadius="5"
                        Padding="0"/>
            </Grid>
        </Frame>

        <!-- View Options -->
        <HorizontalStackLayout Grid.Row="1" Spacing="10" Margin="0,0,0,10" HorizontalOptions="Center">
            <Label Text="Zeige Tage:" VerticalOptions="Center" FontSize="14"/>
            <Button Text="1" 
                    Command="{Binding SetDaysToShowCommand}"
                    CommandParameter="1"
                    BackgroundColor="{Binding DaysToShow, Converter={StaticResource DaysToShowConverter}, ConverterParameter=1}"
                    TextColor="White"
                    WidthRequest="40"
                    HeightRequest="40"
                    CornerRadius="5"
                    Padding="0"
                    FontSize="14"/>
            <Button Text="3" 
                    Command="{Binding SetDaysToShowCommand}"
                    CommandParameter="3"
                    BackgroundColor="{Binding DaysToShow, Converter={StaticResource DaysToShowConverter}, ConverterParameter=3}"
                    TextColor="White"
                    WidthRequest="40"
                    HeightRequest="40"
                    CornerRadius="5"
                    Padding="0"
                    FontSize="14"/>
            <Button Text="7" 
                    Command="{Binding SetDaysToShowCommand}"
                    CommandParameter="7"
                    BackgroundColor="{Binding DaysToShow, Converter={StaticResource DaysToShowConverter}, ConverterParameter=7}"
                    TextColor="White"
                    WidthRequest="40"
                    HeightRequest="40"
                    CornerRadius="5"
                    Padding="0"
                    FontSize="14"/>
        </HorizontalStackLayout>

        <!-- Add Appointment Section -->
        <VerticalStackLayout Grid.Row="2" Spacing="10" Margin="0,0,0,20">
            <Entry Placeholder="Neuer Termin..."
                   Text="{Binding NewAppointmentText}"
                   ReturnCommand="{Binding AddAppointmentCommand}"/>
            
            <Entry Placeholder="Kategorie (z.B. Arbeit, Privat)"
                   Text="{Binding NewAppointmentCategory}"/>
            
            <!-- Color Picker -->
            <Label Text="Farbe:" FontSize="14" FontAttributes="Bold"/>
            <FlexLayout Wrap="Wrap" JustifyContent="Start" AlignItems="Center">
                <CollectionView ItemsSource="{Binding AvailableColors}"
                                SelectionMode="Single"
                                SelectedItem="{Binding NewAppointmentColor}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal" ItemSpacing="5"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="0" 
                                   WidthRequest="50" 
                                   HeightRequest="50" 
                                   CornerRadius="25"
                                   HasShadow="True">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainViewModel}}, Path=SelectColorCommand}"
                                        CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>
                                <Frame.Triggers>
                                    <DataTrigger TargetType="Frame" 
                                                 Binding="{Binding Source={RelativeSource AncestorType={x:Type vm:MainViewModel}}, Path=NewAppointmentColor}" 
                                                 Value="{Binding .}">
                                        <Setter Property="BorderColor" Value="Black"/>
                                        <Setter Property="Padding" Value="3"/>
                                    </DataTrigger>
                                </Frame.Triggers>
                                <BoxView Color="{Binding .}" CornerRadius="25"/>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </FlexLayout>

            <!-- Date and Time Selection -->
            <Label Text="Datum und Uhrzeit:" FontSize="14" FontAttributes="Bold" TextColor="#212121"/>
            <Frame BorderColor="#667eea"
                   BackgroundColor="White"
                   CornerRadius="8"
                   Padding="12"
                   HasShadow="False">
                <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto" RowSpacing="8">
                    <!-- Date/Time Display -->
                    <Label Grid.Row="0" Grid.Column="0"
                           Text="{Binding FormattedScheduledDateTime}"
                           FontSize="16"
                           TextColor="#212121"
                           VerticalOptions="Center"/>
                    
                    <!-- Change Button -->
                    <Button Grid.Row="0" Grid.Column="1"
                            Text="Ã„ndern"
                            Command="{Binding ShowDateTimePickerCommand}"
                            BackgroundColor="#667eea"
                            TextColor="White"
                            CornerRadius="5"
                            Padding="12,6"
                            FontSize="14"/>
                    
                    <!-- Hidden Pickers (only visible when editing) -->
                    <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                          Spacing="10"
                                          IsVisible="{Binding IsDateTimePickerVisible}">
                        <DatePicker Date="{Binding NewAppointmentScheduledDate}"
                                    Format="dd.MM.yyyy"
                                    MinimumDate="01/01/2020"
                                    MaximumDate="12/31/2030"
                                    HorizontalOptions="FillAndExpand"
                                    BackgroundColor="White"
                                    TextColor="Black"/>
                        <TimePicker Time="{Binding NewAppointmentScheduledTime}"
                                    Format="HH:mm"
                                    HorizontalOptions="FillAndExpand"
                                    BackgroundColor="White"
                                    TextColor="Black"/>
                        <Button Text="OK"
                                Command="{Binding HideDateTimePickerCommand}"
                                BackgroundColor="#4caf50"
                                TextColor="White"
                                CornerRadius="5"
                                Padding="12,6"/>
                    </HorizontalStackLayout>
                </Grid>
            </Frame>

            <Entry Placeholder="Dauer (z.B. 30 min, 1-2 Std)"
                   Text="{Binding NewAppointmentDuration}"/>

            <HorizontalStackLayout Spacing="10">
                <CheckBox IsChecked="{Binding NewAppointmentIsOutOfHome}"/>
                <Label Text="AuÃŸer Haus / Unterwegs"
                       VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <Button Text="âž• HinzufÃ¼gen"
                    Command="{Binding AddAppointmentCommand}"
                    BackgroundColor="#667eea"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="15,10"/>

            <!-- Info Box -->
            <Frame BackgroundColor="#e3f2fd"
                   BorderColor="#667eea"
                   CornerRadius="8"
                   Padding="15"
                   Margin="0,10,0,0">
                <Label TextColor="#1565c0">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="ðŸ’¡ " FontAttributes="Bold"/>
                            <Span Text="Tipp: " FontAttributes="Bold"/>
                            <Span Text="WÃ¤hle eine Farbe durch Antippen. GrÃ¼ner Hintergrund = AuÃŸer Haus!"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </Frame>
        </VerticalStackLayout>

        <!-- Appointments List -->
        <RefreshView Grid.Row="3"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding LoadAppointmentsCommand}">
            <CollectionView ItemsSource="{Binding Appointments}">
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       Spacing="20"
                                       Padding="40">
                        <Label Text="ðŸ“"
                               FontSize="80"
                               HorizontalOptions="Center"/>
                        <Label Text="Noch keine Termine vorhanden!"
                               FontSize="18"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                        <Label Text="FÃ¼ge deinen ersten Termin hinzu, um loszulegen."
                               FontSize="14"
                               TextColor="Gray"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Appointment">
                        <Frame Margin="0,5"
                               Padding="15"
                               CornerRadius="10"
                               BorderColor="#e0e0e0"
                               HasShadow="True">
                            <Frame.Triggers>
                                <DataTrigger TargetType="Frame" Binding="{Binding IsOutOfHome}" Value="True">
                                    <Setter Property="BackgroundColor" Value="#A5D6A7"/>
                                    <Setter Property="BorderColor" Value="#4CAF50"/>
                                </DataTrigger>
                                <DataTrigger TargetType="Frame" Binding="{Binding IsOutOfHome}" Value="False">
                                    <Setter Property="BackgroundColor" Value="White"/>
                                </DataTrigger>
                            </Frame.Triggers>
                            <Grid ColumnDefinitions="10,*,Auto" ColumnSpacing="15">
                                
                                <!-- Color Indicator -->
                                <BoxView Grid.Column="0"
                                        Color="{Binding Color}"
                                        WidthRequest="10"
                                        CornerRadius="5"/>

                                <!-- Content -->
                                <VerticalStackLayout Grid.Column="1" Spacing="5">
                                    <Label Text="{Binding Text}"
                                          FontSize="18"
                                          FontAttributes="Bold"
                                          TextColor="#212121"/>
                                    <Label Text="{Binding Category, StringFormat='ðŸ·ï¸ {0}'}"
                                          FontSize="14"
                                          TextColor="#424242"/>
                                    <Label Text="{Binding ScheduledDate, StringFormat='ðŸ•’ {0:dd.MM.yyyy HH:mm} Uhr'}"
                                          FontSize="14"
                                          TextColor="#424242"
                                          IsVisible="{Binding ScheduledDate, Converter={StaticResource IsNotNullConverter}}"/>
                                    <Label Text="{Binding Duration, StringFormat='â±ï¸ {0}'}"
                                          FontSize="14"
                                          TextColor="#424242"
                                          IsVisible="{Binding Duration, Converter={StaticResource IsNotNullConverter}}"/>
                                    <Label Text="ðŸ“ AuÃŸer Haus"
                                          FontSize="14"
                                          FontAttributes="Bold"
                                          TextColor="#2E7D32"
                                          IsVisible="{Binding IsOutOfHome}"/>
                                </VerticalStackLayout>

                                <!-- Action Buttons -->
                                <VerticalStackLayout Grid.Column="2" Spacing="5">
                                    <HorizontalStackLayout Spacing="5">
                                        <Button Text="â¬†ï¸"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainViewModel}}, Path=MovePriorityUpCommand}"
                                               CommandParameter="{Binding .}"
                                               BackgroundColor="#2196F3"
                                               TextColor="White"
                                               WidthRequest="40"
                                               HeightRequest="40"
                                               CornerRadius="5"
                                               Padding="0"/>
                                        <Button Text="â¬‡ï¸"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainViewModel}}, Path=MovePriorityDownCommand}"
                                               CommandParameter="{Binding .}"
                                               BackgroundColor="#2196F3"
                                               TextColor="White"
                                               WidthRequest="40"
                                               HeightRequest="40"
                                               CornerRadius="5"
                                               Padding="0"/>
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Spacing="5">
                                        <Button Text="âœï¸"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainViewModel}}, Path=EditAppointmentCommand}"
                                               CommandParameter="{Binding .}"
                                               BackgroundColor="#4caf50"
                                               TextColor="White"
                                               WidthRequest="40"
                                               HeightRequest="40"
                                               CornerRadius="5"
                                               Padding="0"/>
                                        <Button Text="ðŸ—‘ï¸"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainViewModel}}, Path=DeleteAppointmentCommand}"
                                               CommandParameter="{Binding .}"
                                               BackgroundColor="#f44336"
                                               TextColor="White"
                                               WidthRequest="40"
                                               HeightRequest="40"
                                               CornerRadius="5"
                                               Padding="0"/>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
    </ScrollView>
</ContentPage>

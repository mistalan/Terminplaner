<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TerminplanerMaui.ViewModels"
             xmlns:models="clr-namespace:TerminplanerMaui.Models"
             xmlns:converters="clr-namespace:TerminplanerMaui.Converters"
             x:Class="TerminplanerMaui.Pages.MainPage"
             x:DataType="vm:MainViewModel"
             Title="Terminplaner">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:IsNotNullConverter x:Key="IsNotNullConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,*" Padding="20">
        
        <!-- Current Date Display -->
        <Frame Grid.Row="0" 
               BackgroundColor="#667eea"
               Padding="15"
               Margin="0,0,0,10"
               CornerRadius="8">
            <Label Text="{Binding CurrentDateDisplay}"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"/>
        </Frame>

        <!-- Add Appointment Section -->
        <VerticalStackLayout Grid.Row="1" Spacing="10" Margin="0,0,0,20">
            <Entry Placeholder="Neuer Termin..."
                   Text="{Binding NewAppointmentText}"
                   ReturnCommand="{Binding AddAppointmentCommand}"/>
            
            <Entry Placeholder="Kategorie (z.B. Arbeit, Privat)"
                   Text="{Binding NewAppointmentCategory}"/>
            
            <HorizontalStackLayout Spacing="10">
                <Label Text="Farbe:"
                       VerticalOptions="Center"/>
                <Entry Text="{Binding NewAppointmentColor}"
                       Placeholder="#808080"
                       WidthRequest="100"
                       HorizontalOptions="Start"/>
                <BoxView Color="{Binding NewAppointmentColor}"
                         WidthRequest="40"
                         HeightRequest="40"
                         CornerRadius="5"/>
            </HorizontalStackLayout>

            <DatePicker Date="{Binding NewAppointmentScheduledDate}"
                        Format="D"
                        MinimumDate="01/01/2020"
                        MaximumDate="12/31/2030"/>

            <Entry Placeholder="Dauer (z.B. 30 min, 1-2 Std)"
                   Text="{Binding NewAppointmentDuration}"/>

            <HorizontalStackLayout Spacing="10">
                <CheckBox IsChecked="{Binding NewAppointmentIsOutOfHome}"/>
                <Label Text="Außer Haus / Unterwegs"
                       VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <Button Text="➕ Hinzufügen"
                    Command="{Binding AddAppointmentCommand}"
                    BackgroundColor="#667eea"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="15,10"/>

            <!-- Info Box -->
            <Frame BackgroundColor="#f0f7ff"
                   BorderColor="#667eea"
                   CornerRadius="8"
                   Padding="15"
                   Margin="0,10,0,0">
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="💡 " FontAttributes="Bold"/>
                            <Span Text="Tipp: " FontAttributes="Bold"/>
                            <Span Text="Nutze die Pfeil-Buttons, um die Priorität zu ändern. Grüner Hintergrund = Außer Haus!"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </Frame>
        </VerticalStackLayout>

        <!-- Appointments List -->
        <RefreshView Grid.Row="2"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding LoadAppointmentsCommand}">
            <CollectionView ItemsSource="{Binding Appointments}">
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       Spacing="20"
                                       Padding="40">
                        <Label Text="📝"
                               FontSize="80"
                               HorizontalOptions="Center"/>
                        <Label Text="Noch keine Termine vorhanden!"
                               FontSize="18"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                        <Label Text="Füge deinen ersten Termin hinzu, um loszulegen."
                               FontSize="14"
                               TextColor="Gray"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Appointment">
                        <Frame Margin="0,5"
                               Padding="15"
                               CornerRadius="10"
                               BorderColor="#e0e0e0">
                            <Frame.Triggers>
                                <DataTrigger TargetType="Frame" Binding="{Binding IsOutOfHome}" Value="True">
                                    <Setter Property="BackgroundColor" Value="#C8E6C9"/>
                                </DataTrigger>
                                <DataTrigger TargetType="Frame" Binding="{Binding IsOutOfHome}" Value="False">
                                    <Setter Property="BackgroundColor" Value="White"/>
                                </DataTrigger>
                            </Frame.Triggers>
                            <Grid ColumnDefinitions="10,*,Auto" ColumnSpacing="15">
                                
                                <!-- Color Indicator -->
                                <BoxView Grid.Column="0"
                                        Color="{Binding Color}"
                                        WidthRequest="10"
                                        CornerRadius="5"/>

                                <!-- Content -->
                                <VerticalStackLayout Grid.Column="1" Spacing="5">
                                    <Label Text="{Binding Text}"
                                          FontSize="18"
                                          FontAttributes="Bold"/>
                                    <Label Text="{Binding Category, StringFormat='🏷️ {0}'}"
                                          FontSize="14"
                                          TextColor="Gray"/>
                                    <Label Text="{Binding ScheduledDate, StringFormat='🕒 {0:HH:mm} Uhr'}"
                                          FontSize="14"
                                          TextColor="Gray"
                                          IsVisible="{Binding ScheduledDate, Converter={StaticResource IsNotNullConverter}}"/>
                                    <Label Text="{Binding Duration, StringFormat='⏱️ {0}'}"
                                          FontSize="14"
                                          TextColor="Gray"
                                          IsVisible="{Binding Duration, Converter={StaticResource IsNotNullConverter}}"/>
                                    <Label Text="📍 Außer Haus"
                                          FontSize="14"
                                          FontAttributes="Bold"
                                          TextColor="Green"
                                          IsVisible="{Binding IsOutOfHome}"/>
                                </VerticalStackLayout>

                                <!-- Action Buttons -->
                                <VerticalStackLayout Grid.Column="2" Spacing="5">
                                    <HorizontalStackLayout Spacing="5">
                                        <Button Text="⬆️"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainViewModel}}, Path=MovePriorityUpCommand}"
                                               CommandParameter="{Binding .}"
                                               BackgroundColor="#2196F3"
                                               TextColor="White"
                                               WidthRequest="40"
                                               HeightRequest="40"
                                               CornerRadius="5"
                                               Padding="0"/>
                                        <Button Text="⬇️"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainViewModel}}, Path=MovePriorityDownCommand}"
                                               CommandParameter="{Binding .}"
                                               BackgroundColor="#2196F3"
                                               TextColor="White"
                                               WidthRequest="40"
                                               HeightRequest="40"
                                               CornerRadius="5"
                                               Padding="0"/>
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Spacing="5">
                                        <Button Text="✏️"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainViewModel}}, Path=EditAppointmentCommand}"
                                               CommandParameter="{Binding .}"
                                               BackgroundColor="#4caf50"
                                               TextColor="White"
                                               WidthRequest="40"
                                               HeightRequest="40"
                                               CornerRadius="5"
                                               Padding="0"/>
                                        <Button Text="🗑️"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainViewModel}}, Path=DeleteAppointmentCommand}"
                                               CommandParameter="{Binding .}"
                                               BackgroundColor="#f44336"
                                               TextColor="White"
                                               WidthRequest="40"
                                               HeightRequest="40"
                                               CornerRadius="5"
                                               Padding="0"/>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>

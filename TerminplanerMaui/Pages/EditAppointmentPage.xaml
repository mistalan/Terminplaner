<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TerminplanerMaui.ViewModels"
             x:Class="TerminplanerMaui.Pages.EditAppointmentPage"
             x:DataType="vm:EditAppointmentViewModel"
             Title="Termin bearbeiten">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <Label Text="Termin bearbeiten"
                   FontSize="24"
                   FontAttributes="Bold"
                   Margin="0,0,0,20"/>

            <Entry Placeholder="Termin"
                   Text="{Binding EditText}"/>

            <Entry Placeholder="Kategorie"
                   Text="{Binding EditCategory}"/>

            <!-- Color Picker -->
            <Label Text="Farbe:" FontSize="14" FontAttributes="Bold"/>
            <FlexLayout Wrap="Wrap" JustifyContent="Start" AlignItems="Center">
                <CollectionView ItemsSource="{Binding AvailableColors}"
                                SelectionMode="Single"
                                SelectedItem="{Binding EditColor}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal" ItemSpacing="5"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="0" 
                                   WidthRequest="50" 
                                   HeightRequest="50" 
                                   CornerRadius="25"
                                   HasShadow="True">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:EditAppointmentViewModel}}, Path=SelectColorCommand}"
                                        CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>
                                <Frame.Triggers>
                                    <DataTrigger TargetType="Frame" 
                                                 Binding="{Binding Source={RelativeSource AncestorType={x:Type vm:EditAppointmentViewModel}}, Path=EditColor}" 
                                                 Value="{Binding .}">
                                        <Setter Property="BorderColor" Value="Black"/>
                                        <Setter Property="Padding" Value="3"/>
                                    </DataTrigger>
                                </Frame.Triggers>
                                <BoxView Color="{Binding .}" CornerRadius="25"/>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </FlexLayout>

            <!-- Date and Time Selection -->
            <Label Text="Datum und Uhrzeit:" FontSize="14" FontAttributes="Bold" TextColor="#212121"/>
            <Frame BorderColor="#667eea"
                   BackgroundColor="White"
                   CornerRadius="8"
                   Padding="12"
                   HasShadow="False">
                <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto" RowSpacing="8">
                    <!-- Date/Time Display -->
                    <Label Grid.Row="0" Grid.Column="0"
                           Text="{Binding FormattedScheduledDateTime}"
                           FontSize="16"
                           TextColor="#212121"
                           VerticalOptions="Center"/>
                    
                    <!-- Change Button -->
                    <Button Grid.Row="0" Grid.Column="1"
                            Text="Ändern"
                            Command="{Binding ShowDateTimePickerCommand}"
                            BackgroundColor="#667eea"
                            TextColor="White"
                            CornerRadius="5"
                            Padding="12,6"
                            FontSize="14"/>
                    
                    <!-- Hidden Pickers (only visible when editing) -->
                    <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                          Spacing="10"
                                          IsVisible="{Binding IsDateTimePickerVisible}">
                        <DatePicker Date="{Binding EditScheduledDate}"
                                    Format="dd.MM.yyyy"
                                    MinimumDate="01/01/2020"
                                    MaximumDate="12/31/2030"
                                    HorizontalOptions="FillAndExpand"
                                    BackgroundColor="White"
                                    TextColor="Black"/>
                        <TimePicker Time="{Binding EditScheduledTime}"
                                    Format="HH:mm"
                                    HorizontalOptions="FillAndExpand"
                                    BackgroundColor="White"
                                    TextColor="Black"/>
                        <Button Text="OK"
                                Command="{Binding HideDateTimePickerCommand}"
                                BackgroundColor="#4caf50"
                                TextColor="White"
                                CornerRadius="5"
                                Padding="12,6"/>
                    </HorizontalStackLayout>
                </Grid>
            </Frame>

            <Entry Placeholder="Dauer (z.B. 30 min, 1-2 Std)"
                   Text="{Binding EditDuration}"/>

            <HorizontalStackLayout Spacing="10">
                <CheckBox IsChecked="{Binding EditIsOutOfHome}"/>
                <Label Text="Außer Haus / Unterwegs"
                       VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <Button Text="💾 Speichern"
                    Command="{Binding SaveCommand}"
                    BackgroundColor="#4caf50"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="15,10"
                    Margin="0,20,0,0"/>

            <Button Text="❌ Abbrechen"
                    Command="{Binding CancelCommand}"
                    BackgroundColor="#e0e0e0"
                    TextColor="Black"
                    CornerRadius="8"
                    Padding="15,10"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
